<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 24; -fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oop.lostfound.controller.FormDetailFoundItemController">
    <Label fx:id="itemNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-font-family: Arial;" />
    <ImageView fx:id="itemImageView" fitWidth="200" preserveRatio="true" />
    <Label style="-fx-font-weight: bold;" text="Finder:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font></Label>
   <Label fx:id="finderNameLabel">
      <font>
         <Font name="Arial" size="13.0" />
      </font>
   </Label>
   <Label style="-fx-font-weight: bold;" text="Date Found:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
   <Label fx:id="dateLabel">
      <font>
         <Font name="Arial" size="13.0" />
      </font>
   </Label>
   <Label style="-fx-font-weight: bold;" text="Description:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
   <Label fx:id="descriptionLabel" wrapText="true">
      <font>
         <Font name="Arial" size="13.0" />
      </font>
   </Label>
    <Button fx:id="claimButton" prefHeight="25.0" prefWidth="104.0" style="-fx-background-color: #4ccbd8; -fx-background-radius: 15; -fx-cursor: hand; -fx-font-family: Arial;" text="Claim Barang" textFill="WHITE" />
</VBox>
