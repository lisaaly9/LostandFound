<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="560.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.oop.lostfound.controller.FormMenuUtamaController">

   <!-- Bagian Atas -->
   <top>
      <AnchorPane prefHeight="75.0" prefWidth="960.0" style="-fx-background-color: #3b3a55;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="lostFoundButton" layoutX="6.0" layoutY="7.0" mnemonicParsing="false"
                    onAction="#lostFoundButtonOnAction" prefHeight="61.0" prefWidth="226.0"
                    style="-fx-background-color: transparent;" text="Lost &amp; Found" textFill="WHITE">
               <font>
                  <Font name="Bodoni MT Bold" size="32.0" />
               </font>
            </Button>
            <Button fx:id="lostItemButton" layoutX="226.0" layoutY="23.0" mnemonicParsing="false"
                    onAction="#lostItemButtonOnAction" style="-fx-background-color: transparent;"
                    text="Lost Item" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="foundItemButton" layoutX="320.0" layoutY="23.0" mnemonicParsing="false"
                    onAction="#foundItemButtonOnAction" style="-fx-background-color: transparent;"
                    text="Found Item" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="reportButton" layoutX="429.0" layoutY="23.0" mnemonicParsing="false"
                    onAction="#reportButtonOnAction" style="-fx-background-color: transparent;"
                    text="Report" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="claimButton" layoutX="503.0" layoutY="23.0" mnemonicParsing="false"
                    onAction="#claimButtonOnAction" prefHeight="30.0" prefWidth="71.0"
                    style="-fx-background-color: transparent;" text="Claim" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="logOutButton" alignment="BOTTOM_RIGHT" layoutX="794.0" layoutY="25.0" mnemonicParsing="false"
                    onAction="#logOutButtonOnAction" prefHeight="30.0" prefWidth="117.0"
                    style="-fx-background-color: #4ccbd8; -fx-background-radius: 20;" text="Log Out" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
            <ImageView fitHeight="22.0" fitWidth="23.0" layoutX="806.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/Log%20Out.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </top>

   <!-- Bagian Bawah -->
   <bottom>
      <AnchorPane prefHeight="485.0" prefWidth="960.0" style="-fx-background-color: #e9f3f2;" BorderPane.alignment="CENTER">
         <children>
            <!-- Label Judul -->
            <Label layoutX="38.0" layoutY="12.0" text="Lost &amp; Found">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>

            <!-- Card: Total Items -->
            <Rectangle fill="#3b3a55" height="91.0" layoutX="45.0" layoutY="46.0" width="182.0" style="-fx-arc-width: 60; -fx-arc-height: 60;" />
            <Label layoutX="118.0" layoutY="58.0" text="Total Items" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="totalItemsCountLabel" layoutX="118.0" layoutY="78.0" text="0" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="28.0" />
               </font>
            </Label>

            <!-- Card: Lost Items -->
            <Rectangle fill="#3d5a7e" height="91.0" layoutX="258.0" layoutY="46.0" width="182.0" style="-fx-arc-width: 60; -fx-arc-height: 60;" />
            <ImageView layoutX="278.0" layoutY="59.0" fitWidth="45.0" fitHeight="45.0" preserveRatio="true">
               <image>
                  <Image url="@../image/Lost%20Items.png" />
               </image>
            </ImageView>
            <Label layoutX="331.0" layoutY="59.0" text="Lost Items" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="lostItemsCountLabel" layoutX="331.0" layoutY="79.0" text="0" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="28.0" />
               </font>
            </Label>

            <!-- Card: Found Items -->
            <Rectangle fill="#3da2bb" height="91.0" layoutX="471.0" layoutY="46.0" width="182.0" style="-fx-arc-width: 60; -fx-arc-height: 60;" />
            <ImageView layoutX="491.0" layoutY="59.0" fitWidth="45.0" fitHeight="45.0" preserveRatio="true">
               <image>
                  <Image url="@../image/Found%20Items.png" />
               </image>
            </ImageView>
            <Label layoutX="544.0" layoutY="59.0" text="Found Items" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="foundItemsCountLabel" layoutX="544.0" layoutY="79.0" text="0" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="28.0" />
               </font>
            </Label>

            <!-- Card: Total Claims -->
            <Rectangle fill="#4ccbd8" height="91.0" layoutX="683.0" layoutY="46.0" width="182.0" style="-fx-arc-width: 60; -fx-arc-height: 60;" />
            <ImageView layoutX="703.0" layoutY="59.0" fitWidth="45.0" fitHeight="45.0" preserveRatio="true">
               <image>
                  <Image url="@../image/Total%20Claims.png" />
               </image>
            </ImageView>
            <Label layoutX="756.0" layoutY="59.0" text="Total Claims" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="totalClaimsCountLabel" layoutX="756.0" layoutY="79.0" text="0" textFill="WHITE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="28.0" />
               </font>
            </Label>

            <!-- Label Recent Items -->
            <Label layoutX="38.0" layoutY="158.0" text="Recent Items">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
            </Label>

            <!-- ScrollPane Recent Items -->
            <ScrollPane fx:id="itemListScrollPane" layoutX="38.0" layoutY="190.0" prefHeight="270.0" prefWidth="884.0"
                        style="-fx-background-color: transparent;" fitToWidth="true">
               <content>
                  <FlowPane fx:id="itemListFlowPane" hgap="16" vgap="16" style="-fx-padding: 10;" />
               </content>
            </ScrollPane>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
